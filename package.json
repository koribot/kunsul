{
  "name": "kunsul",
  "version": "0.0.2",
  "description": "Debug logging utility that is ignored by default in production builds",
  "main": "src/kunsul/index.ts",
  "exports": {
    ".": [
      {
        "browser": "./dist/kunsul.esm.mjs",
        "types": "./dist/kunsul.d.ts",
        "import": "./dist/kunsul.esm.mjs",
        "require": "./dist/kunsul.cjs"
      },
      "./dist/kunsul.umd.js"
    ]
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:umd && npm run fix-extensions",
    "fix-extensions": "node scripts/fix-extensions.js",
    "test:node-cjs": "node test/test-cjs.js",
    "test:node-esm": "node test/test-esm.mjs",
    "test": "npm run build && npm run test:node-cjs && npm run test:node-esm"
  },
  "keywords": [
    "debug",
    "logging",
    "console",
    "development"
  ],
  "devDependencies": {
    "typescript": "5.8.3"
  }
}
